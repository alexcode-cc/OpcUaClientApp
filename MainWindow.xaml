<Window x:Class="OpcUaClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OPC UA 客戶端測試工具" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- 連線區域 -->
        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 第一行：端點位址 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="端點位址:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" Name="txtEndpointUrl"
                             Text="opc.tcp://localhost:4840/OpcUaSqlServer"
                             VerticalAlignment="Center" Padding="5"/>
                </Grid>

                <!-- 第二行：安全設定和連線按鈕 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Security Policy:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" Name="cmbSecurityPolicy"
                              VerticalAlignment="Center" SelectedIndex="0"
                              SelectionChanged="CmbSecurityPolicy_SelectionChanged">
                        <ComboBoxItem Content="None"/>
                        <ComboBoxItem Content="Basic256Sha256"/>
                    </ComboBox>

                    <TextBlock Grid.Column="2" Text="Message Security Mode:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                    <ComboBox Grid.Column="3" Name="cmbMessageSecurityMode"
                              VerticalAlignment="Center" SelectedIndex="0">
                        <ComboBoxItem Content="None"/>
                        <ComboBoxItem Content="Sign"/>
                        <ComboBoxItem Content="SignAndEncrypt"/>
                    </ComboBox>

                    <Button Grid.Column="5" Name="btnConnect" Content="連線"
                            Width="80" Margin="10,0,5,0" Click="BtnConnect_Click"/>
                    <Button Grid.Column="6" Name="btnDisconnect" Content="斷線"
                            Width="80" Margin="5,0,10,0" Click="BtnDisconnect_Click" IsEnabled="False"/>

                    <!-- 狀態燈號 -->
                    <StackPanel Grid.Column="7" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Name="statusLight" Width="30" Height="30" Fill="Red" Stroke="DarkGray" StrokeThickness="2"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- 主要內容區 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側：節點瀏覽器 -->
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="OPC UA 節點樹" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <Button Name="btnBrowseNodes" Content="瀏覽節點" 
                                Width="100" Margin="10,0,0,0" Click="BtnBrowseNodes_Click"/>
                    </StackPanel>

                    <TreeView Grid.Row="1" Name="treeNodes" 
                              SelectedItemChanged="TreeNodes_SelectedItemChanged">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding NodeClass}" Foreground="Gray" FontSize="10"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- 右側：節點操作區 -->
            <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 節點資訊 -->
                    <GroupBox Grid.Row="0" Header="節點資訊" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="顯示名稱:" Margin="0,0,0,5"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Name="txtDisplayName" IsReadOnly="True" 
                                     Background="WhiteSmoke" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="節點 ID:" Margin="0,0,0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Name="txtNodeId" IsReadOnly="True" 
                                     Background="WhiteSmoke" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="節點類別:" Margin="0,0,0,5"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Name="txtNodeClass" IsReadOnly="True" 
                                     Background="WhiteSmoke" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="資料型別:" Margin="0,0,0,5"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Name="txtDataType" IsReadOnly="True" 
                                     Background="WhiteSmoke" Margin="0,0,0,5"/>
                        </Grid>
                    </GroupBox>

                    <!-- 讀取區 -->
                    <GroupBox Grid.Row="1" Header="讀取資料" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="當前值:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Name="txtCurrentValue" IsReadOnly="True" 
                                     Background="WhiteSmoke" Padding="5" FontWeight="Bold" FontSize="14"/>
                            <Button Grid.Row="0" Grid.Column="2" Name="btnRead" Content="讀取" 
                                    Margin="10,0,0,0" Click="BtnRead_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="時間戳記:" Margin="0,5,0,0" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Name="txtTimestamp" 
                                     IsReadOnly="True" Background="WhiteSmoke" Margin="0,5,0,0"/>
                        </Grid>
                    </GroupBox>

                    <!-- 寫入區 -->
                    <GroupBox Grid.Row="2" Header="寫入資料" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="新值:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Name="txtNewValue" Padding="5"/>
                            <Button Grid.Column="2" Name="btnWrite" Content="寫入" 
                                    Margin="10,0,0,0" Click="BtnWrite_Click"/>
                        </Grid>
                    </GroupBox>

                    <!-- 訂閱監控區 -->
                    <GroupBox Grid.Row="3" Header="監控 (Subscription)" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Name="btnSubscribe" Content="訂閱節點" Width="100" 
                                        Margin="0,0,10,0" Click="BtnSubscribe_Click"/>
                                <Button Name="btnUnsubscribe" Content="取消訂閱" Width="100" 
                                        Click="BtnUnsubscribe_Click"/>
                                <TextBlock Text="更新間隔(ms):" VerticalAlignment="Center" Margin="20,0,5,0"/>
                                <TextBox Name="txtPublishingInterval" Text="1000" Width="80" VerticalAlignment="Center"/>
                            </StackPanel>

                            <ListBox Grid.Row="1" Name="lstMonitoredItems" DisplayMemberPath="Message"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Border>
        </Grid>

        <!-- 日誌區 -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="操作日誌" FontWeight="Bold" FontSize="14"/>
                    <Button Name="btnClearLog" Content="清除" Width="60" Margin="10,0,0,0" Click="BtnClearLog_Click"/>
                </StackPanel>

                <TextBox Grid.Row="1" Name="txtLog" IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto" 
                         Background="Black" Foreground="LightGreen" 
                         FontFamily="Consolas" FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
